@model Domain.Entities.Document

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
        @if (Model.Files.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Files.First().Version) </th>
                        <th> @Html.DisplayNameFor(model => model.Files.First().Name) </th>
                        <th> @Html.DisplayNameFor(model => model.Files.First().Extension) </th>
                        <th> @Html.DisplayNameFor(model => model.Files.First().CreatedAt) </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model.Files)
                    {
                        <tr>
                            <td> @file.Version </td>
                            <td> @file.Name </td>
                            <td> @file.Extension.ToUpper() </td>
                            <td> @file.CreatedAt </td>
                            <td><a class="btn btn-primary" asp-action="DownloadFile" asp-route-id="@file.Id">Download</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        @* <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FileName)
        </dd> *@
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar para lista</a>
</div>