@model IEnumerable<Domain.Entities.Document>

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Title) </th>
            <th> @Html.DisplayNameFor(model => model.Description) </th>
            <th> @Html.DisplayNameFor(model => model.Files.First().Version) </th>
            <th> @Html.DisplayNameFor(model => model.Files.First().Name) </th>
            <th> @Html.DisplayNameFor(model => model.Files.First().Extension) </th>
            <th> @Html.DisplayNameFor(model => model.CreatedAt) </th>
            <th> @Html.DisplayNameFor(model => model.UpdatedAt) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var document in Model)
            {
                <tr>
                    <td> @document.Title </td>
                    <td> @document.Description </td>
                    @if (document.Files.Count > 0)
                    {
                        <td>@document.Files.First().Version</td>
                        <td>@document.Files.First().Name</td>
                        <td>@document.Files.First().Extension.ToUpper()</td>
                    }
                    else
                    {
                        <td></td>
                    }
                    <td> @document.CreatedAt </td>
                    <td> @document.UpdatedAt </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@document.Id">Detalhes</a>
                        @if (document.Files.Count > 0)
                        {
                            <a class="btn btn-primary" asp-action="DownloadFile"
                                asp-route-id="@document.Files.First().Id">Download</a>
                        }
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@document.Id">Editar</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@document.Id">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>

    <div class='box_documents'>
        @if (Model != null)
        {
            @foreach (var document in Model)
            {
                <div class='documents'>
                    <div class=''>
                        @document.Title
                    </div>
                </div>
            }
        }
    </div>
</table>